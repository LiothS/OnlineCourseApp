<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/linear1"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/empty23"
            android:id="@+id/parentAvatar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:text="Quang Thien"
                android:id="@+id/parentUserName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sadasdasdadddddddddddddddddddddasdsadddddddddddddddddddddddddddddsadsddddddddddddddddd"
                android:textSize="16dp"
                android:textColor="#312B2B"
                android:id="@+id/parentCommentContent"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/empty23"
                android:scaleType="fitXY"
                android:id="@+id/parentImage"

                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 phút trước"
            android:id="@+id/parentPostTime"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phản hồi"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"
            android:textColor="#312B2B"
            android:id="@+id/parentReplyBtn"
            />


    </LinearLayout>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18dp"
       android:textColor="#4D3B3B"
       android:id="@+id/moreComment"
       android:text="Xem thêm phản hồi khác"
       android:visibility="gone"
       android:layout_marginLeft="70dp"
       android:layout_marginTop="10dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/empty23"
            android:id="@+id/childrenAvatar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lam Trường"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/childrenUserName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sadsddddddddddddddd"
            android:textSize="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textColor="#312B2B"
            android:id="@+id/childrenCommentContent"

            />
    </LinearLayout>

</LinearLayout>