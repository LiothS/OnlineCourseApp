<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OwnLessonActivity"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F44336"
        android:id="@+id/ownLessonTB"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:background="@drawable/user_info_border"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin về bài giảng"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay đổi chỉnh sửa thông tin về bài giảng"
                android:textSize="13dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/user_info_border"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cơ bản: "
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_info_border"
                    android:hint="Tên bài giảng"
                    android:id="@+id/lessonName"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_info_border"
                    android:hint="Số thứ tự"
                    android:id="@+id/ownLessonOrder"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/user_info_border"
                android:orientation="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Cập nhật thông tin"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/updateLesson"

                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Quản lí tài liệu"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/fileManage"

                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Quản lí video"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/videoManage"

                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Popup Question"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/multipleChoiceManage"

                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Câu hỏi trắc nghiệm"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/quizManagement"

                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Xóa bài giảng này"
                    android:background="@drawable/save_button"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:id="@+id/deleteLesson"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"


                    />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>