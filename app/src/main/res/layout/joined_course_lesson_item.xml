<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"


    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#29303b"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/circle_border_lesson_order"
        >
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30dp"
            android:id="@+id/joinedLessonOrder"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"



            android:fontFamily="@font/open_sans"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sssssssssssssasdasdasdasdasdsadsadasdad"
            android:textSize="15dp"
            android:textColor="#fff"
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/joinedLessonTitle"
            android:fontFamily="@font/open_sans"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Chưa hoàn thành"
           android:id="@+id/checkCompleted"
           android:textColor="#fff"
           />
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:id="@+id/completeIcon"
        android:layout_height="50dp"
        android:src="@drawable/ic_done_black_24dp"
        />
</LinearLayout>

</androidx.cardview.widget.CardView>